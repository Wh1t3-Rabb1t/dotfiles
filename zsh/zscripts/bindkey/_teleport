#!/usr/bin/env zsh

# ---------------------------------------------------------------------------- #
# FZF z jump list and cd to the selected directory.                            #
# ---------------------------------------------------------------------------- #
# Args    : None                                                               #
# Globals : BUFFER                                                             #
# ---------------------------------------------------------------------------- #

emulate -L zsh

local selection="$(\
    z -l \
    | sed 's/^[0-9. ]*//' \
    | fzf \
        --no-sort \
        --filepath-word \
        --query="$*" \
        --preview='\
            LC_COLLATE=C \
            \ls -l -v \
            --almost-all \
            --group-directories-first \
            --classify \
            --color=always \
            --human-readable {}' \
)"

if [[ "$selection" ]]; then
    BUFFER="cd $selection"
    zle accept-line
fi
