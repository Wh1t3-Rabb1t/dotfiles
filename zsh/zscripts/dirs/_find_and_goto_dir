#!/usr/bin/env zsh

# ---------------------------------------------------------------------------- #
# Search and cd to the selected directory.                                     #
# ---------------------------------------------------------------------------- #
# Args    : None                                                               #
# Globals : None                                                               #
# ---------------------------------------------------------------------------- #

emulate -L zsh

local selection

if (( ${+commands[fd]} )); then
    selection="$(fd --color=always --type=directory --hidden\
    --exclude Library\
    --exclude .git\
    | fzf)"
else
    selection="$(find . -type d \(\
    -path "./Library/*" -or\
    -path "./.git/*" -or\
    -path "./node_modules/*" \)\
    -prune -o -type d -print\
    | fzf)"
fi

if [[ -z "$selection" ]]; then
    echo -e "\nSearch cancelled."
else
    cd "$selection"
fi
