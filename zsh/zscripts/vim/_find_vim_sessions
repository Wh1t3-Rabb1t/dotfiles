#!/usr/bin/env zsh

# ---------------------------------------------------------------------------- #
# Search for Vim sessions, cd to parent dir, and open selection.               #
# ---------------------------------------------------------------------------- #
# Args    : None                                                               #
# Globals : None                                                               #
# ---------------------------------------------------------------------------- #

emulate -L zsh

pushd ~

local selection=$( \
    fd Session.vim \
        --format {//} \
        --fixed-strings \
        --extension .vim \
        --hidden \
        --no-ignore \
        --exclude Library \
        --exclude .git \
        --exclude .cache \
    | fzf \
)

if [[ -z "$selection" ]]; then
    popd
else
    cd "$selection"
    command nvim -S
fi
