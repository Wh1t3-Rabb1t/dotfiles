#!/usr/bin/env zsh

# ---------------------------------------------------------------------------- #
# Search for, and cd to the selected directory.                                #
# ---------------------------------------------------------------------------- #
# Args    : None                                                               #
# Globals : None                                                               #
# ---------------------------------------------------------------------------- #

emulate -L zsh

local selection

if (( ${+commands[fd]} )); then
    selection=$( \
        fd \
            --type directory \
            --hidden \
            --color=always \
        | fzf --header=' Jump to selected directory.' \
    )
else
    selection=$( \
        find . \
            -type directory \( \
            -path "./Library/*" -or \
            -path "./.git/*" -or \
            -path "./node_modules/*" \) \
            -prune -o -type directory -print \
        | fzf --header=' Jump to selected directory.' \
    )
fi

if [[ "$selection" ]]; then
    cd "$selection"
fi
