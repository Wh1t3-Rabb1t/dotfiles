#!/usr/bin/env zsh

# ---------------------------------------------------------------------------- #
# Search for, and cd to the selected directory.                                #
# ---------------------------------------------------------------------------- #
# Args    : None                                                               #
# Globals : None                                                               #
# ---------------------------------------------------------------------------- #

emulate -L zsh

local selection

if (( ${+commands[fd]} )); then
    selection=$( \
        fd \
            --type directory \
            --color always \
        | fzf \
            --header=' Jump to directory. <Tab> : Toggle hidden.' \
            --prompt 'Show .  ' \
            --bind 'tab:transform:[[ ! $FZF_PROMPT =~ Show ]] \
                && echo \
                    "change-prompt(Show .  )+reload( \
                        fd \
                            --type directory \
                            --color always \
                    )" \
                || echo \
                    "change-prompt(Hide .  )+reload( \
                        fd \
                            --type directory \
                            --hidden \
                            --color always \
                    )"' \

    )
else
    selection=$( \
        find . \
            -type directory \( \
            -path "./Library/*" -or \
            -path "./.git/*" -or \
            -path "./node_modules/*" \) \
            -prune -o -type directory -print \
        | fzf --header=' Jump to directory.' \
    )
fi

if [[ "$selection" ]]; then
    cd "$selection"
    zle accept-line
fi
